if(MSVC)
  if(${CMAKE_GENERATOR_PLATFORM} STREQUAL x64
     AND ${MSVC_VERSION} GREATER_EQUAL 1910
     AND ${MSVC_VERSION} LESS_EQUAL 1939)
    set(AWS_SDK_LIB_PATH x64/vc17/staticlib)
  else()
    message(FATAL_ERROR "Unsupported MSVC!")
  endif()
